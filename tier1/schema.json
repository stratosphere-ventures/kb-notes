{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tier-1 Fact Graph Day (Layer-1 only)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "governance",
    "market_outcomes",
    "events",
    "reaction_windows",
    "movers",
    "sectors",
    "tickers",
    "evidence_items"
  ],
  "properties": {
    "governance": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "date",
        "region",
        "market_session",
        "published_ts",
        "asof_ts",
        "universe_scope",
        "doc_version",
        "trust_tier",
        "license_policy",
        "market_data_vendor",
        "market_data_version",
        "calc_versions",
        "pipeline_version"
      ],
      "properties": {
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "region": {
          "type": "string",
          "enum": [
            "US",
            "EU",
            "APAC"
          ]
        },
        "market_session": {
          "type": "string",
          "enum": [
            "pre",
            "regular",
            "post",
            "weekend"
          ]
        },
        "published_ts": {
          "type": "string",
          "format": "date-time"
        },
        "asof_ts": {
          "type": "string",
          "format": "date-time"
        },
        "universe_scope": {
          "type": "string",
          "minLength": 1
        },
        "doc_version": {
          "type": "integer",
          "minimum": 1
        },
        "trust_tier": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "license_policy": {
          "type": "string",
          "minLength": 1
        },
        "market_data_vendor": {
          "type": "string",
          "minLength": 1
        },
        "market_data_version": {
          "type": "string",
          "minLength": 1
        },
        "calc_versions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "pipeline_version": {
          "type": "string",
          "minLength": 1
        },
        "doc_id": {
          "type": "string",
          "minLength": 1
        },
        "doc_key": {
          "type": "string",
          "minLength": 1
        },
        "is_current": {
          "type": "boolean"
        },
        "is_active": {
          "type": "boolean"
        },
        "sources_used": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "source_name",
              "source_type"
            ],
            "properties": {
              "source_name": {
                "type": "string",
                "minLength": 1
              },
              "source_type": {
                "type": "string",
                "minLength": 1
              },
              "count": {
                "type": "integer",
                "minimum": 0
              },
              "max_age_days": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        }
      }
    },
    "market_outcomes": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "headline_neutral",
        "indices",
        "rates_fx_commodities",
        "volatility",
        "breadth"
      ],
      "properties": {
        "headline_neutral": {
          "type": "string",
          "minLength": 5
        },
        "indices": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "symbol",
              "close",
              "return_pct"
            ],
            "properties": {
              "symbol": {
                "type": "string",
                "minLength": 1
              },
              "close": {
                "type": "number"
              },
              "return_pct": {
                "type": "number"
              },
              "open": {
                "type": "number"
              },
              "high": {
                "type": "number"
              },
              "low": {
                "type": "number"
              },
              "prev_close": {
                "type": "number"
              }
            }
          }
        },
        "rates_fx_commodities": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "symbol",
              "value",
              "unit"
            ],
            "properties": {
              "symbol": {
                "type": "string"
              },
              "value": {
                "type": "number"
              },
              "unit": {
                "type": "string",
                "enum": [
                  "pct",
                  "bps",
                  "usd",
                  "index",
                  "other"
                ]
              },
              "change": {
                "type": "number"
              }
            }
          }
        },
        "volatility": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "symbol",
              "close"
            ],
            "properties": {
              "symbol": {
                "type": "string"
              },
              "close": {
                "type": "number"
              },
              "change": {
                "type": "number"
              }
            }
          }
        },
        "breadth": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "advancers",
            "decliners"
          ],
          "properties": {
            "advancers": {
              "type": "integer",
              "minimum": 0
            },
            "decliners": {
              "type": "integer",
              "minimum": 0
            },
            "pct_above_200dma": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "event_id",
          "event_type",
          "published_ts",
          "market_session",
          "facts",
          "source",
          "entities"
        ],
        "properties": {
          "event_id": {
            "type": "string",
            "minLength": 1
          },
          "event_type": {
            "type": "string",
            "minLength": 1
          },
          "published_ts": {
            "type": "string",
            "format": "date-time"
          },
          "event_ts": {
            "type": "string",
            "format": "date-time"
          },
          "market_session": {
            "type": "string",
            "enum": [
              "pre",
              "regular",
              "post",
              "weekend"
            ]
          },
          "facts": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "source_type",
              "canonical_url"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "source_type": {
                "type": "string",
                "minLength": 1
              },
              "canonical_url": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "entities": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "reaction_windows": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "event_id",
          "instrument",
          "window",
          "move_pct"
        ],
        "properties": {
          "event_id": {
            "type": "string",
            "minLength": 1
          },
          "instrument": {
            "type": "string",
            "minLength": 1
          },
          "window": {
            "type": "string",
            "minLength": 1
          },
          "move_pct": {
            "type": "number"
          },
          "move_points": {
            "type": "number"
          }
        }
      }
    },
    "movers": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "top_gainers",
        "top_decliners"
      ],
      "properties": {
        "top_gainers": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "symbol",
              "return_pct",
              "sector",
              "volume_multiple"
            ],
            "properties": {
              "symbol": {
                "type": "string"
              },
              "return_pct": {
                "type": "number"
              },
              "sector": {
                "type": "string"
              },
              "volume_multiple": {
                "type": "number"
              }
            }
          }
        },
        "top_decliners": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "symbol",
              "return_pct",
              "sector",
              "volume_multiple"
            ],
            "properties": {
              "symbol": {
                "type": "string"
              },
              "return_pct": {
                "type": "number"
              },
              "sector": {
                "type": "string"
              },
              "volume_multiple": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "sectors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "return_pct",
          "volume_multiple"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "return_pct": {
            "type": "number"
          },
          "volume_multiple": {
            "type": "number"
          }
        }
      }
    },
    "tickers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "symbol",
          "close",
          "return_pct",
          "volume_multiple",
          "technicals",
          "filings_identified"
        ],
        "properties": {
          "symbol": {
            "type": "string"
          },
          "close": {
            "type": "number"
          },
          "return_pct": {
            "type": "number"
          },
          "volume_multiple": {
            "type": "number"
          },
          "technicals": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "sma_50",
              "sma_200",
              "rsi_14"
            ],
            "properties": {
              "sma_20": {
                "type": "number"
              },
              "sma_50": {
                "type": "number"
              },
              "sma_200": {
                "type": "number"
              },
              "rsi_14": {
                "type": "number"
              }
            }
          },
          "filings_identified": {
            "type": "boolean"
          }
        }
      }
    },
    "evidence_items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "event_id",
          "source_name",
          "source_type",
          "published_ts",
          "canonical_url",
          "excerpt",
          "doc_id",
          "chunk_id"
        ],
        "properties": {
          "event_id": {
            "type": "string",
            "minLength": 1
          },
          "source_name": {
            "type": "string",
            "minLength": 1
          },
          "source_type": {
            "type": "string",
            "minLength": 1
          },
          "published_ts": {
            "type": "string",
            "format": "date-time"
          },
          "canonical_url": {
            "type": "string",
            "minLength": 1
          },
          "excerpt": {
            "type": "string",
            "minLength": 1
          },
          "doc_id": {
            "type": "string",
            "minLength": 1
          },
          "chunk_id": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}